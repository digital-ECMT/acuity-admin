<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jdbc="http://www.springframework.org/schema/jdbc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/jdbc
    http://www.springframework.org/schema/jdbc/spring-jdbc-3.1.xsd">
    
    <!-- This creates the embedded database that DBunit loads the XML data into so that it can run the tests -->
    <jdbc:embedded-database id="dbUnitDataSource" type="H2">
        <jdbc:script location="classpath:../test-classes/sql/dbunit/tables/report/batch_job_instance.sql"/>
        <jdbc:script location="classpath:../test-classes/sql/dbunit/tables/report/batch_job_execution.sql"/>
        <jdbc:script location="classpath:../test-classes/sql/dbunit/tables/report/report_data_table.sql"/>
    </jdbc:embedded-database>

    <bean class="org.springframework.jdbc.core.JdbcTemplate">
        <constructor-arg ref="dbUnitDataSource" />
    </bean>
    
</beans>